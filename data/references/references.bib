  langid = {english},
  pmcid = {PMC9184522},
  pmid = {35680885},
  annotation = {18 citations (Semantic Scholar/DOI) [2022-12-14]},
  file = {/Users/etretiakov/MEGAsync/Zotero/2022__nat_commun__dimitrov_et_al__comparison_of_methods_and_resources_for_cell-cell_communication_inference_from_single-cell_rna-seq_data.pdf}
